<h1>Edit</h1>
<%= form_for :article, url: admins_article_path, method: :patch do |f| %>
	<% if @article.errors.any? %>
		<div id="error_explanation">
			<h2><%= @article.errors.count %> error</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
	<%= f.label :title, "Title" %><br>
	<%= f.text_field :title %>
	</p>

	<p>
	<%= f.label :content, "Content" %><br>
	<%= f.text_area :content, cols: 60, rows: 8 %>
	</p>

	<p>
	<%= f.submit %>
	</p>
<% end %>

<%= link_to 'Back', admins_articles_path %>
